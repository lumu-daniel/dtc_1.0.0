<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">
    <Button
        android:id="@+id/paynow_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/paynowm"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom|center"
        android:layout_gravity="bottom"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_copyright"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Copyright "
            android:textColor="@color/colorblack"
            android:textStyle="bold"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_copyright_symbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="\u00a9 "
            android:textStyle="bold"
            android:textColor="@color/colorblack"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_copyright_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2020 "
            android:textColor="@color/colorblack"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_copyright_mlt_allrightsreserved"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Multi-Level Technology LLC."
            android:textColor="@color/colorPrimary"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/tv_copyright_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All Rights Reserved"
            android:textColor="@color/colorblack"
            android:textSize="15sp" />
    </LinearLayout>


</LinearLayout>